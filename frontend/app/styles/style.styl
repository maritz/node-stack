@import "nib"
@import "defaults.styl"
@import "mixins.styl"

.tabs > .active > a, .tabs > .active > a:hover
  cursor auto

.hidden
  display none !important

.error
  color font-color-error

.nav-pill
  cursor pointer

.fake_link
  cursor pointer
  color link-color

.jGrowl
  position fixed
  top 20px
  left 50%
  margin-left -250px
  width 500px

.jGrowl-notification, .jGrowl-closer
  background-color #ffffff
  gradient #ccf, white
  border 1px solid #888
  border-radius 5px
  box-shadow 3px, 3px, 4px, #333
  color #000
  display none
  opacity 0.9
  padding 4px 8px

.success .jGrowl-message, .success .jGrowl-header
  color #3f3


.jGrowl-header
  font-weight 700

.jGrowl-notification.warning
  color #e8ac14

.jGrowl-close, .jGrowl-closer
  float right
  font-weight bold
  cursor pointer

*
  position relative

#userbox
  border 1px solid #9e869e
  border-radius 5px
  box-shadow 2px 2px 0 0 #338;
  padding 5px 10px
  position absolute
  right 10px
  top 10px
  
@keyframes blink_success
  0%
    background-color 0
  
  50%
    background-color #7ebf88
   
  100%
    background-color 0
  
@keyframes blink_error
  0%
    background-color 0
  
  50%
    background-color #de4545
  
  100%
    background-color 0

.success_blink
  animation-name blink_success
  animation-duration 0.5s
.error_blink
  animation-name blink_error
  animation-duration 0.5s


form
  label.required
    font-weight bold
  
  &.acl, &.admin
    .controls
      width 300px
  
  .button-row
    button
      margin 4px 10px
      
span.one_line
  text-overflow ellipsis
  whitespace nowrap

ul
  list-style-type none


@import "font-awesome.styl"


@keyframes view_loading_fadein
  0%
    opacity(0)
  
  15%
    opacity(0)
  
  100%
    opacity(1)

.view_loading_overlay
  animation-name view_loading_fadein
  animation-duration 1s
  animation-timing-function cubic-bezier(0, 0, 1, 1)
  animation-fill-mode forwards
  min-height 200px

  &, .backdrop
    left 0px
    position absolute
    top 0px
    height 100%
    width 100%

  .backdrop
    background-color rgba(100, 100, 100, 0.6)
    opacity(0.5)

  span
    font-size 2em
    font-weight bold
    left 50%
    margin -1em 0 0 -4em
    position absolute
    top 50%

  .loading_balls_container
    height 20px
    left 50%
    margin 0 0 0 -128px
    position absolute
    top 50%
    width 256px
  
    & > *
      background-color #000000
      position absolute
      top 0
      left 0
      width 20px
      height 20px
      border-radius 10px
      animation-name loading_balls
      animation-duration 2s
      animation-iteration-count infinite
      animation-timing-function linear
  
    .ball_1
      animation-delay 0s
  
    .ball_2
      animation-delay .5s
  
    .ball_3
      animation-delay 1s
  
    .ball_4
      animation-delay 1.5s


@keyframes loading_balls 
  0%
    left 0px
    opacity(.6)
  
  12%
    top -16px
  
  25%
    left 78px
    opacity(.1)
    top -20px
  
  37%
    top -16px
  
  50%
    left 146px
    opacity(.6)
  
  62%
    top 16px
  
  75%
    left 78px
    opacity(1)
    top 20px
  
  87%
    top 16px
  
  100%
    left 0px
    opacity(.8)

.chromeframe {
    margin: 0.2em 0;
    background: #ccc;
    color: #000;
    padding: 0.2em 0;
}
